<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.user_info.name, user %>
        <% if current_user_admin? %>
            | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
                          :title => "Delete #{user.login}" %>
        <% end %>
      </li>
  <% end %>
</ul>