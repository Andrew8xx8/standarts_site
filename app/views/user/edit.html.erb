<h1>Редактировать пользователя</h1>
<%= form_for @user, :url => { :action => :update, :id => @user.id } do |f| %>
    <%= render 'layouts/error_message', :obj => f.object %>
    <div class="field">
      <%= f.label "Логин" %><br />
      <%= f.text_field :login %>
    </div>
    <div class="field">
      <%= f.label "Пароль" %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <%= fields_for @user_info do |ff| %>
        <div class="field">
          <%= ff.label "Фамилия" %><br />
          <%= ff.text_field :surname %>
        </div>
        <div class="field">
          <%= ff.label "Имя" %><br />
          <%= ff.text_field :name %>
        </div>
        <div class="field">
          <%= ff.label "Отчество" %><br />
          <%= ff.text_field :patronymic %>
        </div>
        <div class="field">
          <%= ff.label "Эл.почта" %><br />
          <%= ff.text_field :mail %>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Обновить" %>
    </div>
<% end %>