<h2><%= @news.title %></h2>
<%= @news.content.html_safe %>
<% content_for :submenu do %>
    <li><%= link_to "Добавить ещё новость", new_admin_news_path %></li>
    <li><%= link_to "Редактировать новость", edit_admin_news_path(@news) %></li>
    <li><%= link_to "Удалить новость", admin_news_path(@news), method: :delete, data: {confirm: "Вы уверены?"} %></li>
<% end %>

<% content_for :left do %>
    <%= link_to "Назад", admin_news_index_path %>
<% end %>
