<h2>Создание информации о пользователе</h2>
<%= form_for :new, :url => url_for(:controller => 'user_info', :user_id => @user_id), :html => { :multipart => true } do |f| %>
    <div class="field">
      <%= f.label "Фамилия" %>
      <%= f.text_field :surname %>
    </div>
    <div class="field">
      <%= f.label "Имя" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "Отчество" %>
      <%= f.text_field :patronymic %>
    </div>
    <div class="field">
      <%= f.label "Электронная почта" %>
      <%= f.text_field :mail %>
    </div>
    <div class="field">
      <%= f.label "Фотография профиля" %>
      <%= f.file_field :avatar, :accept => 'image/jpeg,image/gif,image/png' %>
    </div>
    <div class="actions">
      <%= f.submit "Добавить", :class => "btn btn-success" %>
    </div>
<% end %>