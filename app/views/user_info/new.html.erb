<h2>Создание информации о пользователе</h2>
<p><text style="color: red;">Пожалуйста, завершите регистрацию.</text> Шаг 2/3</p>
<%= form_for @new, :url => url_for(:controller => 'user_info', :user_id => @user_id), :html => { :multipart => true } do |f| %>
    <%= render 'layouts/error_message', :obj => f.object %>
    <div class="field">
      <%= f.label :surname %>
      <%= f.text_field :surname %>
    </div>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :patronymic %>
      <%= f.text_field :patronymic %>
    </div>
    <div class="field">
      <%= f.label :mail %>
      <%= f.text_field :mail %>
    </div>
    <div class="field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, :accept => 'image/jpeg,image/gif,image/png' %>
    </div>
    <div class="actions">
      <%= f.submit "Сохранить", :class => "btn btn-success" %>
    </div>
<% end %>