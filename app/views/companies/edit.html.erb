<h2>Редактирование информации о компании</h2>
<%= form_for @company, url: user_company_path, html: { multipart: true } do |f| %>
    <%= render 'layouts/error_message', :obj => f.object %>
    <div class="field">
      <%= f.label :opf %>
      <%= f.text_field :opf %>
    </div>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :logo %>
      <%= image_tag @company.logo.medium.url %><br>
      <%= f.file_field :logo, :accept => 'image/jpeg,image/gif,image/png' %>
      <%= f.hidden_field :logo_cache %>
    </div>
    <% if @company.logo? %>
        <div class="field">
          <label>
            <%= f.check_box :remove_logo %> Удалить фотографию
          </label>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit :class => "btn" %>
    </div>
<% end %>

<% content_for :submenu do %>
    <li><%= link_to "Логин и пароль", edit_user_path %></li>
    <li><%= link_to "Информация о пользователе", edit_user_user_info_path %></li>
    <li><%= link_to "Информация о компании", edit_user_company_path %></li>
<% end %>
