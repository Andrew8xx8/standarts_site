<h2>Редактирование информации о компании</h2>
<%= form_for :edit, :url => { :action => :update }, :method => :put, :html => { :multipart => true } do |f| %>
    <div class="field">
      <%= f.label "ОПФ" %>
      <%= f.text_field :opf %>
    </div>
    <div class="field">
      <%= f.label "Наименование" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "Логотип компании" %>
      <%= image_tag @edit.logo %><br>
      <%= f.file_field :logo, :accept => 'image/jpeg,image/gif,image/png' %>
    </div>
    <div class="actions">
      <%= f.submit "Обновить", :class => "btn" %>
    </div>
<% end %>

<% content_for :submenu do %>
    <li><%= link_to "Логин и пароль", edit_user_path(@user) %></li>
    <li><%= link_to "Информация о пользователе", edit_user_info_path(@user.user_info) %></li>
    <li><%= link_to "Информация о компании", edit_company_path(@edit) %></li>
<% end %>
