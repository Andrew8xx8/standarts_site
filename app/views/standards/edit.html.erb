<h2>Редактирование раздела</h2>
<div style="position: absolute; visibility: hidden;" id="native_id"><%= @standard.id %></div>
<%= form_for @standard, :url => { :action => :update, :id => @standard.link } do |f| %>
    <%= render 'layouts/error_message', :obj => f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :parent_id %>
      <%= f.select(:parent_id, @select.collect {|p| [ p.for_select, p.id ] }, {:include_blank => 'Не принадлежит'}) %>
    </div>
    <div id="number">
      <%= render :partial => "standards/number_selection", :locals => {:obj => @standard } %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <%= f.cktext_area :content, :toolbar => "My" %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn" %>
    </div>
<% end %>

<% content_for :submenu do %>
    <li><%= link_to "Назад", standard_path(@standard.link) %></li>
<% end %>

<% content_for :left do %>
    <%= link_to "К списку всех стандартов", standards_path %>
<% end %>