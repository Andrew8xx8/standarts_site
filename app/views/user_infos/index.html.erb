<h2>Пользователи системы</h2>
<% if @all.blank? %>
    <em>Пользователей нет</em>
<% else %>
    <table class="table table-bordered">
      <tr>
        <td style="width: 10%;">Аватар</td>
        <td>Пользователь</td>
        <td>Компания</td>
        <td>Когда создан</td>
        <td>Действия</td>
      </tr>
      <% @all.each do |one| %>
          <tr>
            <td style="text-align: center;">
              <%= image_tag one.avatar.url(:thumb) %>
            </td>
            <td>
              <%= link_to one.fi, one %>
            </td>
            <td>
              <%= (one.company) ? (link_to one.company.opf_and_name, one.company) : "Данные повреждены" %>
            </td>
            <td>
              <%= (one.created_at) ? one.created_at.getlocal.strftime("%d.%m.%Y %T") : "Нет данных" %>
            </td>
            <td>
              <%= link_to "Удалить", (one.user) ? one.user : one, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
    </table>
<% end %>

<% render "layouts/admin_left_column" %>

